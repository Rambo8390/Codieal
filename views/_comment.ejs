<li id="comment-<%= comment._id %>" style="list-style: none;">
    <p>
        <% if (locals.user && locals.user.id == comment.user){ %>
        
        <small>
            <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>"><i class="fas fa-trash-alt" style="color: red;"></i></a>
        </small>
        <% } %>
        <span class="badge bg-primary">
            <%= comment.content %>
        </span>
        
        <br>
        <small class="badge bg-info text-dark"></small>
            <%= comment.user.name %>
        </small>
            <!-- <% console.log(comment.user.name) %> -->
        <!-- CHANGE :: display the likes of this comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
        <!-- study about the data attribute -->
        <small>
            <% if (locals.user){ %>
                <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                        <%= comment.likes.length %> <i class="fas fa-thumbs-up"></i>
                </a>
            <% }else{ %>
                <%= comment.likes.length %> <i class="fas fa-thumbs-up"></i>
            <% } %>
        </small>

    </p>    

</li>